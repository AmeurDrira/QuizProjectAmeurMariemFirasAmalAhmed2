<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragement.MainFragment"
    android:background="@drawable/bg">

    <!--ImageView
        android:id="@+id/mImage"
        android:layout_width="wrap_content"
        android:layout_below="@+id/HeaderText"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:gravity="top"
        android:maxHeight="42dp"
        android:src="@drawable/logobrain"
        /-->

    <TextView android:id="@+id/HeaderText"

        android:textStyle="bold"
        android:textColor="@color/text_shadow"
        android:shadowColor="@color/light_font"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="QUIZ GAME"
        android:textSize="40dp"
        android:fontFamily="Arial"/>


    <Button
        android:id="@+id/Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HeaderText"

        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="50dp"
        android:paddingRight="65dp"
        android:paddingLeft="65dp"
        android:textSize="20dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/buttonStart" />

    <Button
        android:id="@+id/Resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Start"
        android:layout_gravity="bottom"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="50dp"
        android:paddingRight="73dp"
        android:paddingLeft="73dp"
        android:textSize="20dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/buttonResume" />


    <Button
        android:id="@+id/Config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Resume"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="50dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/buttonconfig"
        android:textSize="20dp"/>


    <Button
        android:id="@+id/shareFb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Config"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/fb" />

    <Button
        android:id="@+id/shareG"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Config"
        android:layout_marginTop="16dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/google" />



</RelativeLayout>